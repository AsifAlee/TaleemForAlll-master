<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rawalpindi_uni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.shafiq.asifa.taleemforalll.RwpUniActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:text="The Following are the list of universities in Rawalpindi:"
            />

        <com.google.android.gms.ads.AdView

            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/rwpAdview"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/rwp_add_unit"

            ></com.google.android.gms.ads.AdView>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:padding="5dp"

            android:id="@+id/rwp_uni_list_view">



        </ListView>



    </LinearLayout>

</LinearLayout>
